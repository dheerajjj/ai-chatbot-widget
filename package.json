{
  "name": "ai-chatbot-widget",
  "version": "1.0.0",
  "description": "A production-ready, embeddable AI chatbot widget powered by OpenAI GPT models with user management, subscription billing, and analytics",
  "main": "server-mongo.js",
  "scripts": {
    "start": "node server-mongo.js",
    "dev": "nodemon server-mongo.js",
    "server": "node server-mongo.js",
    "dev:watch": "nodemon server-mongo.js",
    "setup": "node setup.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "status": "node -e \"console.log('MongoDB:', require('child_process').execSync('sc query MongoDB', {encoding: 'utf8'}).includes('RUNNING') ? 'Running' : 'Stopped'); console.log('Node.js:', process.version);\"",
    "mongo:start": "net start MongoDB",
    "mongo:stop": "net stop MongoDB",
    "mongo:status": "sc query MongoDB",
    "deploy:heroku": "git push heroku main",
    "deploy:railway": "railway up",
    "deploy:render": "echo 'Push to GitHub to trigger Render deployment'",
    "build": "echo 'No build step required'"
  },
  "keywords": [
    "ai",
    "chatbot",
    "widget",
    "openai",
    "gpt-4"
  ],
  "author": "Your Name",
  "license": "MIT",
